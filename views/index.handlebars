<div class="container">
    <div class="row">
        <h1 class="center">Eat-Da-Burger</h1>
    </div>
    <div class="row">
        <div class="col s6">
            {{#each burgers}}
            {{#unless this.devoured}}
            <div>
                <form action="/burgers/{{this.id}}" method="POST">
                    <button type="submit" class="uneaten">{{this.burger_name}}</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col s6">
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    {{this.burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>
</div>